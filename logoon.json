{
  "severities": ["TRACE","DEBUG","INFO","WARNING","ERROR","FATAL"],
  "sinks": [
    {
      "name": "error",
      "type": "file",
      "filters": {
        "severity": "ERROR",
        "tags": ["!access"]
      },
      "format": "%time% %severity% %message%",
      "options": "./error.log"
    },
    {
      "name": "access",
      "type": "file",
      "filters": {
        "tags": ["access"]
      },
      "format": "%time(2006-02-01 15:03:04.000)% - %message%",
      "options": "./access.log"
    },
    {
      "disabled": true,
      "name": "debug",
      "type": "console",
      "filter": {
        "tags": ["console"]
      },
      "format": "[%time%] [%severity%] %message%"
    }
  ]
}